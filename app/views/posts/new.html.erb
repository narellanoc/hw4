<h1>New Post</h1>

<% if @current_user %>
<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>
  <p>
    <%= form.label "uploaded_image" %>
    <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <%= form.hidden_field "place_id" %>
<% end %>
<% else %>
  <p>
  Please login first
  </p>
<% end %>
